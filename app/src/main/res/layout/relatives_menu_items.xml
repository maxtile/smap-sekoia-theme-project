<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutGames"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:padding="1dp"
    android:orientation="horizontal"
    android:background="@drawable/selector"
    tools:context="com.example.sekoia.app.RelativesMenuActivity" >

    <ImageView
        android:id="@+id/item_imageView_activity"
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:maxHeight="100dp"
        android:maxWidth="70dp"
        android:src="@drawable/icon_games"
        android:layout_margin="15dp"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@+id/txt_menu_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/item_imageView_activity"
        android:layout_alignLeft="@+id/item_imageView_activity"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="100dp"
        android:textColor="@color/fontColor"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/textView_menu_games"/>
</RelativeLayout>


