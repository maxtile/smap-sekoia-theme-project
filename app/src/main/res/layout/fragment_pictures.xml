<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sekoia.app.PicturesActivity$PlaceholderFragment"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddPictureButtonText"
        android:id="@+id/AddPictureButton"
        android:layout_alignTop="@+id/DeletePictureButton"
        android:layout_toLeftOf="@+id/DeletePictureButton"
        android:layout_marginRight="53dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DeletePictureButton"
        android:id="@+id/DeletePictureButton"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageGridView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/AddPictureButton"
        android:layout_alignParentTop="true"
        android:padding="5dp"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="15dp"/>

    <!--<ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageListView"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/DeletePictureButton"
        android:layout_alignEnd="@+id/DeletePictureButton"
        android:layout_marginTop="62dp"
        android:layout_above="@+id/AddPictureButton" />-->



</RelativeLayout>
