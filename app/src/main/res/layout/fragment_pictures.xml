<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sekoia.app.PicturesActivity$PlaceholderFragment"
    android:background="#ffffff">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/AddPictureButtonText"
        android:id="@+id/AddPictureButton"
        android:height="50dp"
        android:minWidth="70dp"
        android:maxWidth="200dp"
        android:layout_alignTop="@+id/DeletePictureButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="74dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/DeletePictureButton"
        android:id="@+id/DeletePictureButton"
        android:layout_marginBottom="54dp"
        android:height="50dp"
        android:minWidth="70dp"
        android:maxWidth="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/imageGridView"
        android:layout_alignEnd="@+id/imageGridView"
        android:layout_marginRight="53dp" />

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageGridView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/AddPictureButton"
        android:layout_alignParentTop="true"
        android:verticalSpacing="15dp"
        android:horizontalSpacing="15dp"
        android:numColumns="auto_fit"
        android:smoothScrollbar="true"
        android:listSelector="@drawable/gridviewitem_selector"/>

</RelativeLayout>
